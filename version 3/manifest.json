{
    "manifest_version": 3,
    "name": "NeuroScript Extension 2",
    "version": "2.0",
    "description": "AI-powered real-time content adaptation for neurodivergent users.",
    "permissions": ["storage"],
    "host_permissions": ["https://api.openai.com/*"],
    "icons": {
    "48": "icon.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["data/emoji.json", "fonts/OpenDyslexicMono-Regular.otf"],
            "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}
